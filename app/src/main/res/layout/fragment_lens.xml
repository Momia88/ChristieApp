<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black">


    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/btn_height">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/btn_height_small"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/btnFocusPlus"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="+"
                        android:textColor="@color/text_style_1"
                        android:background="@drawable/btn_style_1"
                        android:textSize="@dimen/btn_txt_size_32"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"/>
                <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:layout_gravity="center"
                        android:background="@color/dark_gray"/>

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="FOCUS"
                        android:textSize="@dimen/btn_txt_size_32"
                        android:gravity="center"
                        android:textColor="@color/gray"
                        android:layout_weight="1"/>
                <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:layout_gravity="center"
                        android:background="@color/dark_gray"/>

                <TextView
                        android:id="@+id/btnFocusMinux"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="-"
                        android:textSize="@dimen/btn_txt_size_32"
                        android:gravity="center"
                        android:textColor="@color/text_style_1"
                        android:background="@drawable/btn_style_1"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/btn_height_small"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/btnZoomPlus"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="+"
                        android:textColor="@color/text_style_1"
                        android:background="@drawable/btn_style_1"
                        android:textSize="@dimen/btn_txt_size_32"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"/>
                <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:layout_gravity="center"
                        android:background="@color/dark_gray"/>

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="ZOOM"
                        android:textSize="@dimen/btn_txt_size_32"
                        android:gravity="center"
                        android:textColor="@color/gray"
                        android:layout_weight="1"/>
                <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:layout_gravity="center"
                        android:background="@color/dark_gray"/>

                <TextView
                        android:id="@+id/btnZoomMinux"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="-"
                        android:textSize="@dimen/btn_txt_size_32"
                        android:gravity="center"
                        android:textColor="@color/text_style_1"
                        android:background="@drawable/btn_style_1"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"/>
            </LinearLayout>

            <TextView
                    android:id="@+id/btnUp"
                    android:layout_width="@dimen/btn_height"
                    android:layout_height="@dimen/btn_height"
                    android:background="@android:drawable/ic_media_play"
                    android:rotation="270"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_weight="1"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:id="@+id/btnLeft"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/btn_height"
                        android:background="@android:drawable/ic_media_play"
                        android:rotation="180"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_weight="1"/>
                <TextView
                        android:id="@+id/btnEnter"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/btn_height"
                        android:text="LENS"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/btn_txt_size_32"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        android:enabled="false"/>

                <TextView
                        android:id="@+id/btnRight"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/btn_height"
                        android:background="@android:drawable/ic_media_play"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_weight="1"/>
            </LinearLayout>
            <TextView
                    android:id="@+id/btnDown"
                    android:layout_width="@dimen/btn_height"
                    android:layout_height="@dimen/btn_height"
                    android:background="@android:drawable/ic_media_play"
                    android:rotation="90"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_weight="1"/>
        </LinearLayout>

    </ScrollView>


    <LinearLayout
            android:id="@+id/buttonGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/btnMenu"
                android:layout_width="0dp"
                android:layout_height="@dimen/btn_height"
                android:gravity="center"
                android:text="MENU"
                android:textColor="@color/text_style_1"
                android:background="@drawable/btn_style_1"
                android:textSize="@dimen/btn_txt_size_32"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"/>

        <View android:id="@+id/line"
              android:layout_width="2dp"
              android:layout_height="match_parent"
              android:layout_gravity="center"
              android:layout_margin="10dp"
              android:background="@color/gray"/>

        <TextView
                android:id="@+id/btnExit"
                android:layout_width="0dp"
                android:layout_height="@dimen/btn_height"
                android:text="EXIT"
                android:textSize="@dimen/btn_txt_size_32"
                android:gravity="center"
                android:textColor="@color/text_style_1"
                android:background="@drawable/btn_style_1"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"/>

    </LinearLayout>

</RelativeLayout>
